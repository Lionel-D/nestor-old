<header>
    <nav class="navbar sticky-top navbar-expand-md navbar-dark bg-dark">
        <a href="{{ path('site_homepage') }}" class="navbar-brand py-0">
            <img src="{{ asset('build/images/nestor-icon.svg') }}" width="40" height="40" alt="{{ 'Nestor Logo'|trans }}">
        </a>

        <span class="navbar-text">
            {{ 'Welcome'|trans({'%name%': app.user.name},'app') }}!
        </span>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="main-nav" class="collapse navbar-collapse justify-content-end text-right">
            <ul class="navbar-nav mt-3 mt-md-0 mr-md-3">
                {% block main_nav %}{% endblock %}
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-user-circle"></i> {{ 'Profile'|trans({},'app') }}
                    </a>
                </li>
            </ul>
            <hr class="d-md-none my-2">
            {% block header_buttons %}{% endblock %}
            <a href="{{ path('security_logout') }}" class="btn btn-sm btn-outline-nestor">{{ 'Sign out'|trans({},'security') }} <i class="fas fa-sign-out-alt"></i></a>
        </div>
    </nav>
</header>
