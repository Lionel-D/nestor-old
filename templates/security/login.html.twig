{% extends 'base.html.twig' %}

{% block title %}{{ 'Please sign in'|trans([],'security') }}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('security') }}
{% endblock %}

{% block body %}
    <div class="container h-100 d-flex justify-content-center align-items-center">
        <div class="text-center">
            <a href="{{ path('site_homepage') }}" class="d-inline-block mb-4">
                <img src="{{ asset('build/images/nestor-icon.svg') }}" width="80" height="80" class="img-fluid" alt="{{ 'Nestor Logo'|trans }}">
            </a>

            <div class="card text-white bg-dark">
                <h3 class="card-header text-center">{{ 'Please sign in'|trans([],'security') }} :</h3>
                <div class="card-body">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger mb-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="form-group">
                            <label for="inputEmail" class="sr-only">{{ 'Email'|trans([],'security') }}</label>
                            <input type="email" id="inputEmail" name="email" value="{{ last_username }}" class="form-control" placeholder="{{ 'Email'|trans([],'security') }}" required autofocus>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword" class="sr-only">{{ 'Password'|trans([],'security') }}</label>
                            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="{{ 'Password'|trans([],'security') }}" required>
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" id="remember_me" name="_remember_me" class="custom-control-input">
                                <label class="custom-control-label" for="remember_me">{{ 'Remember me'|trans([],'security') }}</label>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" name="login_submit" class="btn btn-block btn-outline-nestor">
                            <i class="fas fa-sign-in-alt"></i> {{ 'Sign in'|trans([],'security') }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('security') }}
{% endblock %}
